<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linxcool.andbase.demo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true">
        <activity android:name="com.linxcool.andbase.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.linxcool.andbase.shower.RxBusActivity" />
        <activity android:name="com.linxcool.andbase.shower.RxCacheActivity"/>
        <activity android:name="com.linxcool.andbase.shower.RetrofitActivity"/>
        <activity android:name="com.linxcool.andbase.shower.GlideActivity"/>
    </application>

</manifest>